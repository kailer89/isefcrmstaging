<h1>Correos</h1>

<div class="well">
  <%= search_form_for @search do |f| %>
    <p>
      Nombre del correo contiene
      <%= f.text_field :nombredelmail_cont %> 

      Contenido del correo contiene
      <%=f.text_field :maildata_cont %>

      <%= f.submit "Buscar" , :class => 'btn btn-primary' %>
    </p>
  <% end %>
</div>
<div class="well">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th><%= sort_link @search, :id %></th>
        <th><%= sort_link @search, :nombredelmail %></th>
        <th><%= sort_link @search, :created_at %></th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @correos.each do |correo| %>
        <tr>
          <td><%= correo.id %></td>
          <td><%= link_to correo.nombredelmail, correo_path(correo) %></td>
          <td><%= correo.created_at %></td>
          <td>
            <%= link_to 'Edit', edit_correo_path(correo), :class => 'btn btn-mini' %>
            <%= link_to 'Destroy', correo_path(correo), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
    <%= will_paginate @correos %>
    <%= link_to 'New', new_correo_path, :class => 'btn btn-primary' %>