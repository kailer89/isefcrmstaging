<%= simple_form_for @caso, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', casos_path, :class => 'btn' %>
<%=render :partial=>"shared/breadcrumbs", :locals=>{:model_name=>request.path_parameters[:controller],:model_id=>@caso.id, :parent_model=>nil, :parent_id=>nil}%>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> Caso</legend>

    <div class="control-group">
      <%= f.label :caso, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :caso, :class => 'text_field' %>
      </div>
    </div>	
	
            <%=f.input :programa_id,:label=>"Programa" do%>
              <%= f.select :programa_id , Programa.all.map{ |c| ["" + c.nivel + "-" + c.programa, c.id] }%>
            <%end%>  

    <div class="control-group">
      <%= f.label :status_del_caso, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :status_del_caso, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :nombre_del_cliente, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :nombre_del_cliente, :class => 'text_field' %>
      </div>
    </div>

      <%= f.input :fecha_que_se_presenta_el_problema do %>
             <div class="input-append date datepicker" data-date="<%=DateTime.now.strftime('%Y/%m/%d')%>" data-date-format="yyyy/mm/dd">
               <%= f.text_field :fecha_que_se_presenta_el_problema, :readonly => true%>
         <span class="add-on"><i class="icon-th"></i></span>
             </div>  
           <%end%>

      <%= f.input :fecha_estimada_de_resolucion do %>
             <div class="input-append date datepicker" data-date="<%=DateTime.now.strftime('%Y/%m/%d')%>" data-date-format="yyyy/mm/dd">
               <%= f.text_field :fecha_estimada_de_resolucion%>
         <span class="add-on"><i class="icon-th"></i></span>
             </div>  
           <%end%>

    <div class="control-group">
      <%= f.label :ambito_del_problema, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :ambito_del_problema, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sintoma_problema, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :sintoma_problema, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :descripcion_del_sintoma_problema, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :descripcion_del_sintoma_problema, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :causa_del_problema, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :causa_del_problema, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :alternativas_de_solucion, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :alternativas_de_solucion, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :solucion, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :solucion, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :comentarios_de_seguimiento_al_problema, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :comentarios_de_seguimiento_al_problema, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :atentido_por, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :atentido_por, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :resuelto_por, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :resuelto_por, :class => 'text_field' %>
      </div>
    </div>
      <%= f.input :fecha_que_se_soluciono do %>
             <div class="input-append date datepicker" data-date="<%=DateTime.now.strftime('%Y/%m/%d')%>" data-date-format="yyyy/mm/dd">
               <%= f.text_field :fecha_que_se_soluciono%>
         <span class="add-on"><i class="icon-th"></i></span>
             </div>  
           <%end%>
           
	    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', casos_path, :class => 'btn' %>
    </div>	
  </fieldset>
<% end %>

<script type="text/javascript">
(function($) {
$(document).ready(function(){
  $('.datepicker').datepicker();
});
})(jQuery);

</script>