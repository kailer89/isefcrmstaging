<%= simple_form_for @colegiatura, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                colegiaturas_path, :class => 'btn' %>

  <%= f.input :periodo_anual %>
          <%= f.association :sede, :include_blank=>false,:label_method=>:nombre,:label=>"Sede"%>
            <%= f.association :nivel, :include_blank=>false,:label_method=>:valor,:label=>"Nivel"%>
            <%=f.input :programa_id,:label=>"Programa" do%>
              <%= f.select :programa_id , Programa.all.map{ |c| ["" + c.nivel + "-" + c.programa, c.id] }%>
            <%end%>  
  <%= f.input :cuota_de_inscripcion_para_esta_sede %>
  <%= f.input :cuota_mensual_para_esta_sede %>
  <%= f.input :tipo_y_no_de_pagos_de_inscripcion %>
  <%= f.input :tipo_y_no_de_pagos_de_colegiatura %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                colegiaturas_path, :class => 'btn' %>
  </div>

    <%=render :partial=>"shared/attachments", :locals=>{:model_id=>@colegiatura.id}%>
<% end %>
