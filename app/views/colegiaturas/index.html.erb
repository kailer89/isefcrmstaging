<%- model_class = Colegiatura.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:periodo_anual) %></th>
      <th><%= model_class.human_attribute_name(:sede_id) %></th>
      <th><%= model_class.human_attribute_name(:nivel_id) %></th>
      <th><%= model_class.human_attribute_name(:programa_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @colegiaturas.each do |colegiatura| %>
      <tr>
        <td><%= link_to colegiatura.id, colegiatura_path(colegiatura) %></td>
        <td><%= colegiatura.periodo_anual %></td>
        <td><%= colegiatura.sede.nombre %></td>
        <td><%= colegiatura.nivel.valor %></td>
        <td><%= colegiatura.programa.nivel %> - <%= colegiatura.programa.programa %></td>
        <td><%=l colegiatura.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_colegiatura_path(colegiatura), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      colegiatura_path(colegiatura),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_colegiatura_path,
            :class => 'btn btn-primary' %>
