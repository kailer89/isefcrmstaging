<%= form_for @nivel, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', nivels_path, :class => 'btn' %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Nivel</legend>

    <div class="control-group">
      <%= f.label :valor, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :valor, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', nivels_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
