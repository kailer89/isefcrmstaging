<h1>Turnos</h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Valor</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @turnos.each do |turno| %>
      <tr>
        <td><%= turno.id %></td>
        <td><%= link_to turno.valor, turno_path(turno) %></td>
        <td><%= turno.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_turno_path(turno), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', turno_path(turno), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_turno_path, :class => 'btn btn-primary' %>
