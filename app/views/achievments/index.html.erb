<%- model_class = Achievment.new.class -%>
<h1> Metas </h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:periodo_anual) %></th>
      <th><%= model_class.human_attribute_name(:sede_id) %></th>
      <th><%= model_class.human_attribute_name(:fecha_de_inicio) %></th>
      <th><%= model_class.human_attribute_name(:nivel_id) %></th>
      <th><%= model_class.human_attribute_name(:programa_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @achievments.each do |achievment| %>
      <tr>
        <td><%= link_to achievment.id, achievment_path(achievment) %></td>
        <td><%= achievment.periodo_anual %></td>
        <td><%= achievment.sede.nombre %></td>
        <td><%= achievment.fecha_de_inicio %></td>
        <td><%= achievment.nivel.valor rescue nil %></td>
        <td><%= achievment.programa.nivel rescue nil %> - <%= achievment.programa.programa rescue nil %></td>
        <td><%=l achievment.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_achievment_path(achievment), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      achievment_path(achievment),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_achievment_path,
            :class => 'btn btn-primary' %>
