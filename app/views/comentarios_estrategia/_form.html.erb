<%= form_for @comentarios_estrategium, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', comentarios_estrategia_path, :class => 'btn' %>
<%=render :partial=>"shared/breadcrumbs", :locals=>{:model_name=>request.path_parameters[:controller],:model_id=>@comentarios_estrategium.id, :parent_model=>nil, :parent_id=>nil}%>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> Comentarios Estrategium</legend>

    <div class="control-group">
      <%= f.label :comentario_del_seguimiento, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :comentario_del_seguimiento, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :estrategia_promocional_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :estrategia_promocional_id, :class => 'number_field' %>
      </div>
    </div>
<%=render :partial=>"shared/tareas", :locals=>{:model_id=>@comentarios_estrategium.id}%>
<%=render :partial=>"shared/memos", :locals=>{:model_id=>@comentarios_estrategium.id}%>
<%=render :partial=>"shared/attachments", :locals=>{:model_id=>@comentarios_estrategium.id}%> 
<%=render :partial=>"shared/llamadas", :locals=>{:model_id=>@comentarios_estrategium.id}%> 
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', comentarios_estrategia_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
