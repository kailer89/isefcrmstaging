<%= simple_form_for @oferta_educativa, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                oferta_educativas_path, :class => 'btn' %>
          <%= f.input :periodo_anual %>
          <%= f.association :sede, :include_blank=>false,:label_method=>:nombre,:label=>"Sede"%>
            <%= f.association :nivel, :include_blank=>false,:label_method=>:valor,:label=>"Nivel"%>
            <%=f.input :programa_id,:label=>"Programa" do%>
              <%= f.select :programa_id , Programa.all.map{ |c| ["" + c.nivel + "-" + c.programa, c.id] }%>
            <%end%>  
          <%= f.input :tipo_de_validez %>
          <%= f.input :tipo_de_reconocimiento %>
          <%= f.input :sedes_en_las_que_se_oferta_este_programa %>
          <%= f.input :modalidades_en_que_se_imparte %>
          <%= f.input :horarios_en_que_se_imparte %>
          <%= f.input :requisitos %>
          <%= f.input :objetivo_del_programa %>
          <%= f.input :perfil_de_ingreso %>
          <%= f.input :perfil_de_egreso %>
          <%= f.input :ambito_de_desempeno %>
          <%= f.input :principales_beneficios_que_ofrece_el_programa %>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                oferta_educativas_path, :class => 'btn' %>
  </div>

      <%=render :partial=>"shared/attachments", :locals=>{:model_id=>@oferta_educativa.id}%>
<% end %>
