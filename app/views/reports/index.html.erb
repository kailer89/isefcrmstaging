<h1>Reports</h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.id %></td>
        <td><%= link_to report.nombre, report_path(report) %></td>
        <td><%= report.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_report_path(report), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', report_path(report), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_report_path, :class => 'btn btn-primary' %>
