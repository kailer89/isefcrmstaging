<%- model_class = NacionalDeApertura.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:periodo_actual) %></th>
      <th><%= model_class.human_attribute_name(:sede_id) %></th>
      <th><%= model_class.human_attribute_name(:clave_del_programa) %></th>
      <th><%= model_class.human_attribute_name(:fecha_de_inicio) %></th>
      <th><%= model_class.human_attribute_name(:programa_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @nacional_de_aperturas.each do |nacional_de_apertura| %>
      <tr>
        <td><%= link_to nacional_de_apertura.id, nacional_de_apertura_path(nacional_de_apertura) %></td>
        <td><%= nacional_de_apertura.periodo_actual %></td>
        <td>
<%
         elPrograma = Sede.where(:id=>nacional_de_apertura.sede_id).first
    %>
    <%=elPrograma.nombre%>
        </td>
        <td><%= nacional_de_apertura.clave_del_programa %></td>
        <td><%= nacional_de_apertura.fecha_de_inicio %></td>
        <td>
<%
         elPrograma = Programa.where(:id=>nacional_de_apertura.programa_id).first
    %>
    <%=elPrograma.nivel%>  - <%=elPrograma.programa%>

        </td>
        <td><%=l nacional_de_apertura.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_nacional_de_apertura_path(nacional_de_apertura), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      nacional_de_apertura_path(nacional_de_apertura),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_nacional_de_apertura_path,
            :class => 'btn btn-primary' %>
