<fieldset class="fields" data-object-name="<%= f.object_name %>">
  <legend>Coincide <%= f.combinator_select %> con <%= button_to_remove_fields "remove", f %></legend>
  <%= f.condition_fields do |c| %>
    <%= render 'condition_fields', f: c %>
  <% end %>
  <%= button_to_add_fields "Agregar condicion", f, :condition %>

  <%= f.grouping_fields do |g| %>
    <%= render 'grouping_fields', f: g %>
  <% end %>
  <%= button_to_nest_fields "Agregar grupo de condicion", :grouping %>
</fieldset>
<br/>