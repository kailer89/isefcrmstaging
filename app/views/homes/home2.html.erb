/* Example #2 - Clearing DIV Method */

.clear{
    clear: both;
}

</style>
<script type='text/javascript' src='http://code.jquery.com/jquery-1.7.1.min.js'></script>

</head>
<body>
<script type='text/javascript'>

$(document).ready(function() {
    $('#loading1').show();
    $('#iframe1').attr( "src", "/home");
$('#loading2').show();
    $('#iframe2').attr( "src", "/programas");
$('#iframe1').load(function() {
    $('#loading1').hide();
});
$('#iframe2').load(function() {
    $('#loading2').hide();
});


 });

</script>
<div id='container' class='container'> 
<iframe id='iframe1' class='left' ></iframe>
<iframe id='iframe2' class='right' ></iframe>
</div>
<div id='loading1'><img src="ajax-loader.gif" alt="Smiley face" /></div>
<div id='loading2'><img src="ajax-loader.gif" alt="Smiley face" /></div>
</body>
</html>