<%
prospectosWithNilInUser = Prospecto.where(:user_id=>nil).where(:issolicitante==false)
%>

<%= link_to 'Borrar prospectos invalidos', borrarprospectosinvalidos_path,:confirm => "Estas seguro de querer continuar?" , :class => 'btn btn-mini btn-danger'%>
			<table class="table table-striped table-bordered table-hover table-condensed">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Nombre</th>
                  <th>Borrar</th>
                </tr>
              </thead>
              <tbody>
              	<%prospectosWithNilInUser.each do |prospecto|%>
                <tr>
                  <td><%=prospecto.id%></td>
                  <td><%=prospecto.nombre%> <%=prospecto.apellido_paterno%> <%=prospecto.apellido_materno%></td>
                  <td>
			          <%if not prospecto.issolicitante%>
			              <%= link_to 'Destroy', prospecto_path(prospecto), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
			          <%end%>
                  </td>
                </tr>
                <%end%>
              </tbody>
            </table>
