          <%if not @prospecto.issolicitante?%>
            <%= link_to 'Convertir en Solicitante', convertir_path, :class=>'btn btn-info', :method=>'post', :id=>'convertir'%>
          <%end%>
        <%end%>
      <%end%>
  </div><!--End Form Actions-->
