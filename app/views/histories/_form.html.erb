<%= simple_form_for @history, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                histories_path, :class => 'btn' %>

  <%= f.input :model_name %>
  <%= f.input :model_id %>
  <%= f.input :action %>
  <%= f.input :when %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                histories_path, :class => 'btn' %>
  </div>
<% end %>
