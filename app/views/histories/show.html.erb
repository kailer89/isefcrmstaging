<%- model_class = @history.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:model_name) %>:</strong></dt>
  <dd><%= @history.model_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:model_id) %>:</strong></dt>
  <dd><%= @history.model_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:action) %>:</strong></dt>
  <dd><%= @history.action %></dd>
  <dt><strong><%= model_class.human_attribute_name(:when) %>:</strong></dt>
  <dd><%= @history.when %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              histories_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_history_path(@history), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              history_path(@history),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
