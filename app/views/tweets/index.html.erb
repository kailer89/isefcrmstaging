<h1>Tweets</h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Tweet</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.id %></td>
        <td><%= link_to tweet.tweet, tweet_path(tweet) %></td>
        <td><%= tweet.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_tweet_path(tweet), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', tweet_path(tweet), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_tweet_path, :class => 'btn btn-primary' %>
