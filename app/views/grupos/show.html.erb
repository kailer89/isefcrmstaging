<%=render :partial=>"shared/breadcrumbs", :locals=>{:model_name=>request.path_parameters[:controller],:model_id=>@grupo.id, :parent_model=>nil, :parent_id=>nil}%>
<h1>Grupo</h1>

<p>
  <b>Nombre</b><br>
  <%= @grupo.nombre %>
</p>

<p>
  <b>Descripcion</b><br>
  <%= @grupo.descripcion %>
</p>

<div class="form-actions">
  <%= link_to 'Back', grupos_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_grupo_path(@grupo), :class => 'btn' %>
  <%= link_to 'Delete', grupo_path(@grupo), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
