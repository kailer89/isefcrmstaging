      </tr>   
      <tr>
        <td>Purge Users</td>
        <td>
          <%= link_to 'Purge all Users', purge_users_path , :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>                                            
      <tr>
        <td>Purge all</td>
        <td>
          <%= link_to 'Purge all tables', purge_all_path , :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  </tbody>
</table>
</div>