      <th>Purge</th>
      <th>Run!</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>Purge Admitidos</td>
        <td>
          <%= link_to 'Purge all Admitidos', purge_admitidos_path , :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <tr>
        <td>Purge Examinados</td>
        <td>
          <%= link_to 'Purge all Examinados', purge_examinados_path , :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <tr>
        <td>Purge Inscritos</td>
        <td>
          <%= link_to 'Purge all Inscritos', purge_inscritos_path , :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <tr>
        <td>Purge Prospectos</td>
        <td>
          <%= link_to 'Purge all Prospectos', purge_prospectos_path , :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <tr>
        <td>Purge Sedes</td>
        <td>
          <%= link_to 'Purge all Sedes', purge_sedes_path , :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
