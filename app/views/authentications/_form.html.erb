<%= form_for @authentication, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', authentications_path, :class => 'btn' %>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> Authentication</legend>

    <div class="control-group">
      <%= f.label :user_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :user_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :provider, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :provider, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :uid, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :uid, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', authentications_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
