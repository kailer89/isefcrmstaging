<h1>Dashboard de usuarios</h1>
<div class="well"><%= form_for @search,:url => dashboards_path, :html => {:method => :get} do |f| %>
  <p>
    Nombre de usuario o email contiene
    <%= f.text_field :username_cont %> 
    <%= f.submit "Buscar" , :class => 'btn btn-primary' %>
  </p>
<% end %></div>
<div class="well"><table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Avatar</th>
      <th>ID</th>
      <th><%= sort_link @search, :username %></th>
      <th><%= sort_link @search, :email %></th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag avatar_url(user), :size => "48x48", :alt => "User Avatar"%></td>
        <td><%= user.id %></td>
        <td><%= link_to user.username, edit_user_path(user) %></td>
        <td><%= link_to user.email, edit_user_path(user) %></td>
        <td><%= user.created_at %></td>
        <td> 
          <%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', user_path(user), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table></div>
<%= will_paginate @users  %>
<%= link_to 'New', new_user_path, :class => 'btn btn-primary' %>