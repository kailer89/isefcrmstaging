<%= simple_form_for @contacto, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contactos_path, :class => 'btn' %>

  <%= f.input :nombre_completo %>
  <%= f.input :organizacion %>
  <%= f.input :cargo %>
  <%= f.input :archivar_como %>
  <%= f.input :correo_electronico %>

<%
logger.debug "lllllllllllllllllllllllllllll"
    rol = Role.where(:id=>current_user.role).first
logger.debug rol.nombre
      if rol.nombre == "DN" or rol.nombre == "ACRM" 
%>
        <%= f.input :sede_id,as: :select, :collection=>Sede.all.map{|c| [c.nombre,c.id] }.sort,:include_blank=>false ,:label=> "Sede" %>
  <%else%>
        <%= f.hidden_field :sede_id,:value=>current_user.sede_id %>
  <%end

logger.debug "lllllllllllllllllllllllllllll"
  %>
  <%= f.input :pagina_web %>
  <%= f.input :direccion_de_instant_messenger %>
  <%= f.input :numeros_de_trabajo %>
  <%= f.input :numero_particular %>
  <%= f.input :numero_del_fax_del_trabajo %>
  <%= f.input :numero_movil %>
  <%= f.input :direccion_trabajo %>
  <%= f.input :notas %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contactos_path, :class => 'btn' %>
  </div>
<% end %>
