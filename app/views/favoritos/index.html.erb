<h1>Favoritos</h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Fecha de Creaci√≥n</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @favoritos.each do |favorito| %>
      <tr>
        <td><%= favorito.id %></td>
        <td><%= link_to favorito.nombre, favorito_path(favorito) %></td>
        <td><%= favorito.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_favorito_path(favorito), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', favorito_path(favorito), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_favorito_path, :class => 'btn btn-primary' %>
